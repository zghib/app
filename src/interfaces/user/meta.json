{
  "name": "$t:user",
  "version": "1.0.1",
  "types": ["user", "integer", "user_created", "user_updated"],
  "icon": "account_circle",
  "relation": "user",
  "recommended": {
    "length": 10
  },
  "options": {
    "template": {
      "name": "$t:template",
      "comment": "$t:template_comment",
      "interface": "text-input",
      "default": "{{first_name}} {{last_name}}"
    },
    "placeholder": {
      "name": "$t:placeholder",
      "comment": "$t:placeholder_comment",
      "interface": "text-input",
      "default": "Choose a User"
    },
    "display": {
      "name": "$t:display",
      "comment": "$t:display_comment",
      "interface": "dropdown",
      "default": "both",
      "options": {
        "choices": {
          "both": "$t:avatar + $t:name",
          "avatar": "$t:avatar",
          "name": "$t:name"
        }
      }
    }
  },
  "translation": {
    "en-US": {
      "user": "User",
      "avatar": "Avatar",
      "name": "Name",
      "template": "Template",
      "template_comment": "How to format the users in the dropdown",
      "placeholder": "Placeholder",
      "placeholder_comment": "Add a placeholder",
      "display": "Display",
      "display_comment": "How to display the users on the layouts"
    },
	"fr-FR": {
      "user": "Utilisateur",
      "avatar": "Avatar",
      "name": "Nom",
      "template": "Modèle",
      "template_comment": "Mode d'affichage des utilisateurs dans le menu déroulant",
      "placeholder": "Paramètre fictif",
      "placeholder_comment": "Texte statique qui est affiché avant la sélection d'une valeur",
      "display": "Affichage",
      "display_comment": "Mode d'affichage des utilisateurs dans la mise en page"
    }
  }
}
