      "type": "JSON",
      "options": {
        "fields": {
          "name": {
            "interface": "text-input",
            "type": "String",
            "preview": true
          },
          "value": {
            "interface": "text-input",
            "type": "String",
            "index": true
          },
          "text_color": {
            "interface": "color-palette",
            "type": "String"
          },
          "background_color": {
            "interface": "color-palette",
            "type": "String",
